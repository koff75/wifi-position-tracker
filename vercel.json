{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "version": 2,
    "builds": [
      {
        "src": "web/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "dist" }
      },
      {
        "src": "web/api/**/*.js",
        "use": "@vercel/node"
      }
    ],
    "rewrites": [
      { "source": "/api/:path*", "destination": "/api/:path*" },
      { "source": "/:path*", "destination": "/index.html" }
    ]
  }
  