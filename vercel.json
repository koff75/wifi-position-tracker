{
  "version": 2,
  "builds": [
    {
      "src": "web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/robots.txt", "dest": "/web/dist/robots.txt" },
    { "src": "/sitemap.xml", "dest": "/web/dist/sitemap.xml" },
    { "src": "/site.webmanifest", "dest": "/web/dist/site.webmanifest" },
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/web/dist/$1" }
  ]
}